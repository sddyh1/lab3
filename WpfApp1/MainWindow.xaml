<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <TextBox x:Name="t1" Text="{Binding ElementName=t2, Path=Text, Mode=TwoWay}" FontSize="{Binding ElementName=slider2, Path=Value, Mode=TwoWay}"/>
        <TextBox x:Name="t2" Text="{Binding ElementName=t1, Path=Text, Mode=TwoWay}" FontSize="{Binding ElementName=slider2, Path=Value, Mode=TwoWay}"/>

        <Slider x:Name="slider1"  Maximum="100" Value="{Binding ElementName=slider2, Path=Value, Mode=TwoWay}"/>
        <Slider x:Name="slider2"  Maximum="100"  Value="{Binding ElementName=fontSizeTextBox, Path=Text, Mode=TwoWay}"/>

        <TextBox x:Name="fontSizeTextBox" Text="{Binding ElementName=slider2, Path=Value, Mode=TwoWay}"/>

    </StackPanel>
</Window>
